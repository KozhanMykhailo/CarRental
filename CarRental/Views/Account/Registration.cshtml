@model CarRental.Models.Registration
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Регистрация</h2>

<form asp-action="Registration" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email" class="control-label">Введите Email</label><br />
            <input type="text" asp-for="Email" class="form-control-lg" width="50" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password" class="control-label">Введите пароль</label><br />
            <input asp-for="Password" class="form-control-lg" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword" class="control-label">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" class="form-control-lg" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Зарегистрироваться" class="btn btn-outline-info"/>
        </div>
    </div>
</form>
