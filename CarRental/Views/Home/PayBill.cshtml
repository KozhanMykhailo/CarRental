@model CarRental.Entities.Bill

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Просмотр заказа</title>
</head>
<body>

    <div>
        <h4>Счет</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TypeBill)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TypeBill)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ToPay)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ToPay)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AccountDetails)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AccountDetails)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("Оплатить", "Pay", new { controller = "Home", billId = Model.Id }, new { @class = "btn btn-outline-success" });
    </div>
    <div>
        @Html.ActionLink("К списку моих заказов", "MyAllOrders", new { controller = "Home" }, new { @class = "btn btn-outline-info" })
    </div>
</body>
</html>
