@model CarRental.Entities.Order

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateOrder</title>
</head>
<body>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm(FormMethod.Post))
        {
            <div class="form-group">
                <label>Данные паспорта</label>
                @Html.EditorFor(order => order.PassportData)
                @Html.ValidationMessageFor(order => order.PassportData)
            </div>
            <div class="form-group">
                <label>Имя</label>
                @Html.EditorFor(order => order.FirstName)
                @Html.ValidationMessageFor(order => order.FirstName)
            </div>
            <div class="form-group">
                <label>Фамилия</label>
                @Html.EditorFor(order => order.LastName)
                @Html.ValidationMessageFor(order => order.LastName)
            </div>
            <div class="form-group">
                <label>ИНН</label>
                @Html.EditorFor(order => order.INN)
                @Html.ValidationMessageFor(order => order.INN)
            </div>
            <div class="form-group">
                <label>Услуги водителя</label>
                @Html.DropDownListFor(order => order.OptionDriver,
                     new SelectList(Enum.GetNames(typeof(CarRental.Entities.OptionsDriver))))
                @Html.ValidationMessageFor(order => order.OptionDriver)
            </div>
            <div class="form-group">
                <label>Срок ареды</label>
                @Html.EditorFor(order => order.RentalTime)
                @Html.ValidationMessageFor(order => order.RentalTime)
            </div>
            <input type="submit" value="Создать" class="btn btn-outline-success" />
        }
    </div>
</div>
<div>
    @Html.ActionLink("К списку авто", "Index", new { controller = "Home" }, new { @class = "btn btn-outline-info" })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
