@model CarRental.Entities.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Создание менеджера</title>
</head>
<body>
    <h4>Новый менеджер</h4>
    <hr />
    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="form-group">
            <label>EMAIL</label>
            @Html.TextBoxFor(manager => manager.Email)
            @Html.ValidationMessageFor(manager => manager.Email)
        </div>
        <div class="form-group">
            <label>Пароль</label>
            @Html.PasswordFor(manager => manager.Password)
            @Html.ValidationMessageFor(manager => manager.Password)
        </div>
        <input type="submit" value="Создать" class="btn btn-outline-success"/>
    }
    <div>
        @Html.ActionLink("К списку менеджеров", "GetAllManagers", new { area = "Admin", controller = "Admin" }, new { @class = "btn btn-outline-info" })
    </div>
</body>
</html>
