@model IEnumerable<CarRental.Entities.Car>

@{
    ViewData["Title"] = "GetAllCars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style>
        .class-a-centre {
            display: block;
            text-align: center;
        }
    </style>
<h1>Все доступные предложения</h1>
<p>
    @Html.ActionLink("Создать новое предложение", "CreateCar",new {area = "Admin", controller = "Admin"}, new { @class = "btn btn-outline-info" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageData)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.RentalPrice)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td align="center">
                <div class="class-a-centre">
                    @if (item.ImageData != null)
                    {
                        <img style='width:300px; height:200px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.ImageData))" />
                    }
                </div>
            </td>
            <td>
                @Html.ActionLink("Отредактировать", "EditCar", new { area = "Admin", controller = "Admin", id = item.Id }, new { @class = "btn btn-outline-secondary" })
                @Html.ActionLink("Детали", "DetailsCar", new { area = "Admin", controller = "Admin", id = item.Id }, new { @class = "btn btn-outline-warning" })
                @Html.ActionLink("Удалить", "DeleteCar", new { area = "Admin", controller = "Admin", id = item.Id }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>}
    </tbody>
</table>
<div>
    @Html.ActionLink("Меню", "DefaultAction", new { area = "Admin", controller = "Admin" }, new { @class = "btn btn-outline-info" })
</div>
